<%= render "shared/second-header"%>
<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ログイン
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"登録したパスワード" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログインする" ,class:"login-red-btn" %>
  </div>
  <div class="new_user_password_btn">
    <%= link_to "パスワードを忘れた場合はこちら", new_user_password_path %>
  </div>
<div class="under-user-btn">
  <p> 初めての方ですか？</p>
    <%= link_to "アカウントを作成", new_user_registration_path, class: "new-user-btn" %>
</div>
</div>
<% end %>



