<header>
  <div class="inner">
    <div class="upper-nav">
      <div class="header-left">
        <%= link_to "collections", root_path, class: :app_title %>
      </div>
      <div class="header-right">
        <% if user_signed_in? %>
          <div class="nav__right">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav__logout %>
            <%= link_to current_user.nickname, "/users/#{current_user.id}", class: :user_nickname %>
          </div>
        <% else %>
          <div class="nav__right">
            <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
            <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="under-nav">
  </div>
</header>