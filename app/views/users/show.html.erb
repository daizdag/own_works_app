<%= render 'shared/header' %>
<div class="main">
  <div class="user-show-page">
    <div class="user__wrapper">
      <div class="page-heading">
        <div class="user-show-name">
          <%= "#{@user.nickname}"%><span>さんの情報</span>
        </div>
      </div>
      <!--タブ部分-->
      <ul class="tab-list list-unstyled">
        <li class="tab tab-active">
          ユーザー情報
        </li>
        <li class="tab">
          投稿作品
        </li>
        <li class="tab">
          いいねした作品
        </li>
      </ul>
      <!--タブで選択された要素部分-->
      <div class="tabbox-contents">
        <div class="tabbox box-show">
          <%= render 'users/profile' %>    
        </div>
        <div class="tabbox">
          <%= render 'users/collection-show' %>
        </div>
        <div class="tabbox">
          <%= render 'users/favorite' %>
        </div>
      </div>
    </div>
  </div>
</div>